{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es6",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ]
        },
        "allowJs": true
    },
    "exclude": [
        "node_modules",
        "platforms",
        "coverage",
        "hooks",
        "scripts",
        "jest.config.js",
        "karma.conf.js",
        "webpack.config.js"
    ]
}